<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin">


    <TextView
        android:id="@+id/numero_7"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_toRightOf="@+id/numero_6"
        android:text="6" />

    <TextView
        android:id="@+id/numero_8"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_toRightOf="@+id/numero_7"
        android:text="7" />
    <TextView
        android:id="@+id/numero_9"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_toRightOf="@+id/numero_8"
        android:text="8" />
    <TextView
        android:id="@+id/numero_4"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_below="@+id/numero_7"
        android:layout_toRightOf="@+id/numero_3"
        android:text="3" />

    <TextView
        android:id="@+id/numero_5"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="4"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/numero_6"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_toRightOf="@+id/numero_5"
        android:text="5" />
    <TextView
        android:id="@+id/numero_1"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_toRightOf="@+id/cero"
        android:layout_below="@+id/numero_5"
        android:text="0" />

    <TextView
        android:id="@+id/numero_2"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_below="@+id/numero_5"
        android:layout_toRightOf="@+id/numero_1"
        android:text="1" />
    <TextView
        android:id="@+id/numero_3"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_below="@+id/numero_6"
        android:layout_toRightOf="@+id/numero_2"
        android:text="2" />
    <TextView
        android:id="@+id/punto"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_toRightOf="@+id/numero_9"
        android:text="9" />

    <TextView
        android:id="@+id/cero"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_below="@+id/numero_5"
        android:text="." />

    <TextView
        android:id="@+id/signo_igual"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_below="@+id/punto"
        android:layout_toRightOf="@+id/numero_4"
        android:text="="
        android:layout_toLeftOf="@+id/signo_div"
        android:layout_toStartOf="@+id/signo_div" />

    <TextView
        android:id="@+id/signo_mas"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_below="@+id/numero_3"
        android:layout_toRightOf="@+id/signo_menos"
        android:text="+"
         />
    <TextView
        android:id="@+id/signo_menos"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_below="@+id/signo_por"
        android:text=" - "
        android:layout_alignEnd="@+id/signo_igual" />
    <TextView
        android:id="@+id/signo_por"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_below="@+id/numero_7"
        android:layout_toRightOf="@+id/signo_igual"
        android:text="x" />
    <TextView
        android:id="@+id/signo_div"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_toRightOf="@+id/punto"
        android:text="รท"/>

    <TextView
        style="@style/AppTheme.BotonCalculadora"
        android:id="@+id/textView"
        android:layout_below="@+id/cero"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_toLeftOf="@+id/signo_igual" />

</RelativeLayout>